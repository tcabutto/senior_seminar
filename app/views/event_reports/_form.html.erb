
<%= simple_form_for(@event_report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :offense, collection: EventReport.offenses.keys, include_blank: false%>
    <%= f.input :content %>
    <%= f.hidden_field :account_id, :value => current_account.id%>
    <%= f.hidden_field :event_id, :value => params[:event_id] %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
