<%= simple_form_for([@business, deal]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Deal Name' %>
    <%= f.input :description %>
    <%= f.input :start_date, label: 'Start Date', :start_year => Date.current.year %>
    <%= f.input :end_date, label: 'End Date', :start_year => Date.current.year, 
        :default => Date.tomorrow %>
    <%= f.input :category, collection: Deal.categories.keys, label: 'Choose A Category', 
        include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
