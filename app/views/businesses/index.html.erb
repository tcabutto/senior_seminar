<h1>Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Logo</th>
      <th>Website URL</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= business.name %></td>
        <td>
          <%= business.address1 %>
          <%= business.address2 %>
          <%= business.city %>
          <%= business.state %>
          <%= business.zip %>
        </td>
        <td><%= business.phone_number %></td>
        <td><%= business.logo %></td>
        <td><%= business.website_url %></td>
        <td><%= business.status %></td>
        <td class="actions">
          <ul>
            <li><%= link_to 'Show', business %></li>
            <li><%= link_to 'Edit', edit_business_path(business) %></li>
            <li>
              <%= link_to 'Destroy',
                  business,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

